{
    "name": "yiisoft/assets",
    "type": "library",
    "description": "Asset bundles and asset manager",
    "keywords": [
        "yii",
        "library",
        "assets"
    ],
    "homepage": "https://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/assets/issues?state=open",
        "forum": "https://www.yiiframework.com/forum/",
        "wiki": "https://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/assets"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "ext-mbstring": "*",
        "psr/log": "^1.1",
        "yiisoft/aliases": "^1.1.0",
        "yiisoft/files": "^3.0@dev"
    },
    "require-dev": {
        "foxy/foxy": "^1.1",
        "phpunit/phpunit": "^9.4",
        "roave/infection-static-analysis-plugin": "^1.5",
        "spatie/phpunit-watcher": "^1.23",
        "vimeo/psalm": "^4.3",
        "yiisoft/di": "3.0.x-dev"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\Assets\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Assets\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "config": {
            "sort-packages": true
        },
        "config-plugin": {
            "params": "config/params.php",
            "web": "config/web.php"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    }
}
